@model IEnumerable<Education_MVC.Models.DanhGiaCuaNguoiHoc>

<div class="colorlib-event">
    <div class="container">
        <div id="colorlib-testimony" class="testimony-img" style="background-image: url(../Content/images/img_bg_2.jpg); margin-bottom: 4em; background-position: 50% 241.188px;" data-stellar-background-ratio="0.5">
            <div class="overlay"></div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 center-heading text-center colorlib-heading animate-box fadeInUp animated-fast">
                        <h1 class="heading-big">Những đánh giá của người học</h1>
                        <h2>Những đánh giá của người học</h2>
                    </div>
                </div>              
                    <div class="col-md-12">
                        <div class="testimony-flex">
                            @foreach (var i in Model)
                            {
                                <div class="one-fifth animate-box fadeInUp animated-fast">
                                    <span class="icon"><i class="icon-quotes-left"></i></span>
                                    <div class="testimony-wrap">
                                        <blockquote>
                                            <p>@i.DanhGia</p>
                                        </blockquote>
                                        <div class="desc">
                                            <div class="figure-img" style="background-image: url(../Content/images/person1.jpg);"></div>
                                            <h3>@i.NguoiHoc.TenNH</h3>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>              
            </div>
        </div>
    </div>
</div>